# @desc<<
#
# git pre-commit check script from husky
#
#<<
WORKINGDIR=$(dirname "$0" )

echo "Working: ${WORKINGDIR}"
gitleaks protect --staged
git diff --cached --name-only *md | ${WORKINGDIR}/ci-lint.sh

