{
    "plugins": {},
    "filters": {
        "comments": true,
        "allowlist": {
            "allowlistConfigPaths": [
                ".textlint/allowlist.yml"
            ]
        }
    },
    "rules": {
        "preset-ja-engineering-paper": {
            "prh": false,
            "use-si-units": false,
            "unify-kuten-and-touten": false
        },
        "preset-ja-technical-writing": {
            "sentence-length": 100,
            "max-kanji-continuous-len": {
                "max": 6,
                "allow": [
                    "自然言語処理技術"
                ]
            },
            "ja-no-mixed-period": {
                "periodMark": "。",
                "allowPeriodMarks": [
                    "、",
                    ":"
                ]
            },
            "no-exclamation-question-mark": false,
            "no-doubled-joshi": {
                "strict": false
            }
        },
        "preset-japanese": {
            "sentence-length": {
                "max": 100
            },
            "max-ten": {
                "max": 4
            },
            "no-doubled-joshi": {
                "strict": false
            }
        },
        "preset-ja-spacing": {
            "ja-space-between-half-and-full-width": {
                "space": [
                    "alphabets",
                    "numbers"
                ]
            }
        },
        "no-mixed-zenkaku-and-hankaku-alphabet": true,
        "terminology": {
            "defaultTerms": true
        },
        "common-misspellings": {
            "ignore": []
        },
        "spelling": {
            "language": "en",
            "skipPatterns": [
                "_",
                "/https/ig",
                "/js/ig",
                "/svg/ig",
                "/WSL/ig",
                "/ja/ig",
                "/jp/ig",
                "/dev/ig",
                "/www/ig",
                "/config/ig",
                "/ejje/ig",
                "/qiita/ig",
                "/zenn/ig",
                "/stackoverflow/ig",
                "/techcrunch/ig",
                "/ycombinator/ig",
                "/publickey1/ig",
                "/PowerShell/ig",
                "atsushifx",
                "dotfiles",
                "AWK",
                "/Homebrew/ig",
                "/LinuxBrew/ig",
                "whatdoc",
                "/desc/ig"
            ]
        },
        "@proofdict/proofdict": {
            "dictURL": "https://atsushifx.github.io/proof-dictionary/"
        },
        "prh": {
            "rulePaths": [
                "./.textlint/dict/prh.yml"
            ]
        }
    }
}
