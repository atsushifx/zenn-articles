{
    "plugins": {},
    "filters": {},
    "rules": {
        "preset-ja-engineering-paper": {
            "prh": {
                "rulePaths": [
                    "C:/Users/atsushifx/.local/share\/pnpm/5/node_modules/textlint-rule-preset-ja-engineering-paper/src/dict/prh-rules.yml"
                ]
            },
            "unify-kuten-and-touten": false
        },
        "preset-ja-technical-writing": {
            "no-exclamation-question-mark": false
        },
        "preset-japanese": {
            "sentence-length": {
                "max": 150
            },
            "max-ten": {
                "max": 4
            },
            "no-doubled-joshi": {
                "strict": true,
                "min_interval": 3,
                "allow": [
                    "も",
                    "や",
                    "か"
                ]
            }
        },
        "preset-ja-spacing": {
            "ja-space-between-half-and-full-width": {
                "space": "always"
            }
        },
        "no-mixed-zenkaku-and-hankaku-alphabet": true,
        "terminology": {
            "defaultTerms": true
        },
        "common-misspellings": {
            "ignore": []
        },
        "spelling": {
            "language": "en",
            "skipPatterns": [
                "JavaScript"
            ],
            "wordDefinitionRegexp": "/[\\w']+/g",
            "suggestCorrections": true
        },
        "@proofdict/proofdict": {
            "dictURL": "https://atsushifx.github.io/proof-dictionary/"
        },
        "prh": {
            "rulePaths": [
                "./.textlint/dict/prh.yml"
            ]
        }
    }
}
