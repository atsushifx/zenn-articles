{
	"filters": {
		"allowlist": {
			"allowlistConfigPaths": [
				".textlint/allowlist.yml"
			]
		}
	},
	"rules": {
		"preset-ja-technical-writing": {
			"sentence-length": {
				"max": 110
			},
			"no-mix-dearu-desumasu": {
				"preferInBody": "ですます",
				"strict": true
			}
		},
		"preset-jtf-style": {
			"3.1.1.全角文字と半角文字の間": false,
			"4.2.7.コロン(：)": false,
			"4.2.8.セミコロン(;)": false,
			"4.3.1.丸かっこ（）": false,
			"4.3.2.大かっこ［］": false
		},
		"preset-ja-spacing": {
			"ja-space-between-half-and-full-width": {
				"space": "always"
			}
		},
		"@proofdict/proofdict": {
			"dictURL": "https://atsushifx.github.io/proof-dictionary/",
		},
		"prh": {
			"rulePaths": [
				".textlint/smarthr-basic.yml",
				".textlint/smarthr-tech-word.yml",
				".textlint/atsushifx-proof.yml"
			]
		},
		"@textlint-rule/no-unmatched-pair": true,
		"no-mixed-zenkaku-and-hankaku-alphabet": true,
		"ja-unnatural-alphabet": true,
		"ja-hiragana-hojodoushi": true,
		"ja-hiragana-fukushi": true,
		"ja-hiragana-daimeishi": true,
		"ja-keishikimeishi": true
	}
}