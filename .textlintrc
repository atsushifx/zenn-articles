{
  "filters": {
    "allowlist": {
      "allowlistConfigPaths": [
        ".textlint/allowlist.yml"
      ]
    }
  },
  "rules": {
    "preset-japanese": {
      "sentence-length": {
        "max": 150
      },
      "max-ten": {
        "max": 4
      },
      "no-doubled-joshi": {
        "min_interval": 1,
        "strict": false,
        "allow": [
          "も",
          "や",
          "か"
        ],
        "separatorChars": [
          "、",
          "。",
          "?",
          "!",
          "？",
          "！",
          "「",
          "」",
          "“",
          "”"
        ]
      }
    },
    "preset-jtf-style": {
      "3.1.1.全角文字と半角文字の間": false,
      "4.2.7.コロン(：)": false,
      "4.2.8.セミコロン(;)": false,
      "4.3.1.丸かっこ（）": false,
      "4.3.2.大かっこ［］": false
    },
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      }
    },
    "@textlint-rule/no-unmatched-pair": true,
    "no-mixed-zenkaku-and-hankaku-alphabet": true,
    "ja-unnatural-alphabet": true,
    "ja-hiragana-hojodoushi": true,
    "ja-hiragana-fukushi": true,
    "ja-hiragana-daimeishi": true,
    "ja-hiragana-keishikimeishi": true,
    "terminology": {
      "defaultTerms": true
    },
    "common-misspellings": {
      "ignore": []
    },
    "@proofdict/proofdict": {
      "dictURL": "https://atsushifx.github.io/proof-dictionary/"
    },
    "prh": {
      "rulePaths": [
        ".textlint/prh.yml"
      ]
    }
  }
}
